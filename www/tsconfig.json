{
  "compilerOptions": {
    "strict": true,
    "module": "esNext",
    "jsx": "react",
    "allowJs": false,
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": true,
    "incremental": true
  },
  "include": ["./src/"]
}
