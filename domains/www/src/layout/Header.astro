---
import { SITE_NAME } from "@/site/meta";
---

<header class="mb-16 flex items-center justify-between py-4">
  <h1
    class="site-title font-cursive text-highlight text-4xl font-bold tracking-widest motion-reduce:animate-none motion-reduce:text-shadow-[0_0_8px_var(--color-highlight)]"
  >
    <a class="no-underline" href="/">{SITE_NAME}</a>
  </h1>
  <nav class="flex">
    <a href="/about/">About</a>
  </nav>
</header>

<style>
  @reference "@/site/root.css";

  .site-title {
    animation: flicker 6s infinite alternate;
  }

  @keyframes flicker {
    0%,
    19.999%,
    22%,
    62.999%,
    64%,
    64.999%,
    70%,
    100% {
      opacity: 1;
      text-shadow: 0 0 8px var(--color-highlight);
    }
    20%,
    21.999%,
    63%,
    63.999%,
    65%,
    69.999% {
      opacity: 0.4;
      text-shadow: none;
    }
  }
</style>
