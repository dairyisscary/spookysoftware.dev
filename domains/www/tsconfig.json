{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
}
